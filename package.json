{
  "name": "seven-network-client",
  "version": "0.0.1",
  "main": "src/main.js",
  "description": "Seven Network Client is a Private Venge.io Client that connects to the Seven Network Private Server",
  "scripts": {
    "serve": "electron .",
    "hot-serve": "yon build-public && yon serve",
    "build-win": "electron-builder -w",
    "build-mac": "electron-builder -m",
    "build-linux": "electron-builder -l",
    "build-all": "electron-builder -mwl",
    "build-public": "node src/builder.js",
    "update-source": "node src/downloader.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Seven Network",
  "license": "ISC",
  "build": {
    "productName": "Seven Network Client",
    "appId": "com.sn.client",
    "asar": "true",
    "win": {
      "target": "nsis",
      "icon": "build/game.png",
      "publish": [
        {
          "provider": "github",
          "url": "https://github.com/Seven-Network/Client/releases"
        }
      ]
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!README.md",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!src/mods",
      "!src/source",
      "!src/builder.js",
      "!src/downloader.js",
      "!.github/*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "",
      "artifactName": "Seven-Network-Client-Windows.${ext}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "shortcutName": "Seven-Network",
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/game.png"
    },
    "dmg": {
      "title": "Seven-Network",
      "artifactName": "Seven-Network-Client-Mac.dmg"
    },
    "linux": {
      "target": [
        "deb",
        "snap",
        "rpm"
      ]
    }
  },
  "dependencies": {
    "discord-rpc": "^3.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.3.1",
    "electron-prompt": "^1.6.1",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.5",
    "v8-compile-cache": "^2.2.0"
  },
  "devDependencies": {
    "axios": "^0.21.1",
    "concurrently": "^5.3.0",
    "electron": "9.4.3",
    "electron-builder": "^22.9.1",
    "fs-extra": "^9.0.1",
    "lodash.get": "^4.4.2",
    "object-scan": "^13.8.0",
    "recursive-readdir": "^2.2.2",
    "yarn-or-npm": "^3.0.1"
  }
}
